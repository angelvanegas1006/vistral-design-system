{
  "name": "vistral-design-system",
  "version": "0.1.0",
  "description": "Vistral Design System - Componentes React sincronizados desde Figma",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./tokens.css": "./src/tokens/vistral-tokens.css"
  },
  "files": [
    "dist",
    "src/tokens/vistral-tokens.css"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "figma:test": "tsx scripts/test-figma-connection.ts",
    "figma:sync:tokens": "tsx scripts/sync-figma.ts tokens",
    "figma:sync:components": "tsx scripts/sync-figma.ts components",
    "figma:sync:all": "tsx scripts/sync-figma.ts all",
    "tokens:generate": "tsx lib/generators/token-generator.ts",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "keywords": [
    "design-system",
    "react",
    "components",
    "figma",
    "vistral"
  ],
  "author": "Vistral Lab",
  "license": "UNLICENSED",
  "peerDependencies": {
    "@radix-ui/react-dialog": "^1.0.0",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.0",
    "lucide-react": "^0.400.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "@radix-ui/react-dialog": {
      "optional": true
    },
    "@radix-ui/react-select": {
      "optional": true
    }
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-viewport": "^8.6.15",
    "@storybook/react": "^8.6.14",
    "@storybook/react-webpack5": "^8.6.15",
    "@types/node": "^20",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "dotenv": "^16.6.1",
    "eslint": "^9.39.1",
    "lucide-react": "^0.563.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "storybook": "^8.6.14",
    "ts-loader": "^9.5.4",
    "tsup": "^8.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "zod": "^4.1.13"
  }
}
